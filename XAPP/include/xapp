#pragma once

#include <GL/gl3w.h>

#include <SDL.h>
#include <SDL_opengl.h>

namespace xapp
{
	extern SDL_Window * window;
	extern SDL_Renderer * renderer;
	extern SDL_GLContext glcontext;

	enum mode
	{
		uninitialized = 0,
		opengl = 1,
		sdl = 2,
	};

	bool init(mode mode);

	mode was_init();

	bool update();

	void present();

}
